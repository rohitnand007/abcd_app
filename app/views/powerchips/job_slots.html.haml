:javascript
  $(document).ready(function() {
    $("#slots_list").dataTable({
        "aoColumns": [
                    null,null,null,null,null,null,
                    { "bSortable": false }
                     ],
        "bAutoWidth": false,"aaSorting": [],// disable default auto sorting ex : [ 4, "desc" ] for 4th column
        "bPaginate": false,
        "bFilter": true,
        "bInfo": false,
        "bRetrieve": true,
        "bDestroy": true,
        "oLanguage": { "sSearch": "Search Page:" }

    });
  });
#content_header
  %h1#main_heading Jobs
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          %table#slots_list.listing.sort_table{align: 'center' ,width: '100%',cellpadding:1,cellspacing: 1}
            %thead
              %tr.tr-head
                %th Job ID
                %th Position
                %th Status
                %th Serialnum
                %th Capacity
                %th Message
                %th Cid
            %tbody
              - @slots.each do |slot|
                %tr{:class => cycle("tr-odd", "tr-even"),:id=>"slot_#{slot.id}"}
                  %td.col= slot.jobid
                  %td.col= slot.position
                  %td.col= slot.status
                  %td.col= slot.serialnum
                  %td.col= slot.capacity
                  %td.col= slot.message
                  %td.col= slot.cid
        .pagination_info
          =# paginate @slots
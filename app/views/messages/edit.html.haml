#content_header
  %h1#main_heading Messages
#inner-tab-menu
  %ul
    %li=  link_to "#{t("web-app-theme.list", :default => "Inbox")}", messages_path+user_path(current_user)
    %li= link_to "#{t("web-app-theme.sent", :default => "Sent")}", sent_message_path(current_user)
    %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_message_path
    %li.inner_tab_selected=  link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_message_path
    %li=  link_to "#{t("web-app-theme.show", :default => "Show")}", message_path(@message)
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          #application-list
            = render "form"


-#.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "Inbox")}", messages_path+user_path(current_user)
      %li= link_to "#{t("web-app-theme.new", :default => "Sent")}", sent_message_path(current_user)
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_message_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_message_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Message
    .inner
      = render "form"
-#- content_for :sidebar, render(:partial => 'shared/sidebar')

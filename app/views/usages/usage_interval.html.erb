<div id="content_header">
  <h1 id="main_heading">Generate Usage Report</h1>
</div>
<div id="data">
  <table width="100%">
    <tr>
      <td>
        <div>
          <form method="post" action="usage_per_interval" class="simple_form form">
            <div class="group">
              <div class="field">
                <div class="input string optional"><label for="Interval" class="string optional  label">Interval</label><input type="text"  size="50" name="interval" maxlength="255"  class="string optional text_field"/></div>
              </div>
            </div>
            <div class="group">
              <div class="field">
                <div class="input string optional"><label for="report_start_date" class="string optional  label">Start Date</label><input type="text" value="<%=@report_start_date%>" size="50" name="report_start_date" maxlength="255" id="report_start_date" class="string optional text_field"/></div>
              </div>
            </div>
            <div class="group">
              <div class="field">
                <div class="input string optional"><label for="report_end_date" class="string optional  label">End Date</label><input type="text" value="<%=@report_end_date%>" size="50" name="report_end_date" maxlength="255" id="report_end_date" class="string optional text_field"/></div>
              </div>
            </div>
            <div class="group">
              <div class="field">
                <div class="input string optional"><label for="Institution" class="string optional  label">Institution</label><%=select_tag "institution", options_from_collection_for_select(Institution.all, "id", "name"),:multiple=>true,:style=>"height:100px;"%></div>

              </div>
            </div>
            <div class="actions">
              <input type="submit" value="Get Report" name="submit" class="button big primary"/>
              <input type="submit" value="User Report" name="submit" class="button big primary"/>
            </div>
          </form>
        </div>
      </td>
    </tr>
  </table>
</div>
<script type="text/javascript">
    $(function() {
        $( "#report_start_date" ).datepicker({ dateFormat: "yy-mm-dd" });
        $( "#report_end_date" ).datepicker({ dateFormat: "yy-mm-dd" });
    });
</script>

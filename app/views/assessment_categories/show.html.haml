#content_header
  %h1#main_heading Assessment Categories
#inner-tab-menu
  %ul
    %li= link_to "#{t("web-app-theme.list", :default => "List")}",assessment_categories_path
    %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_assessment_category_path
    %li= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_assessment_category_path(@assessment_category)
    %li.inner_tab_selected= link_to "#{t("web-app-theme.show", :default => "Show")}", assessment_category_path(@assessment_category)
#data
  #application-list
    .heading= @assessment_category.name
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.odd.left
          %td= t("activerecord.attributes.assessment_category.name", :default => t("activerecord.labels.name", :default => "Name"))
          %td.right= @assessment_category.name
        %tr.even.left
          %td
          - if current_user.role.name.eql?('Support Team')
            %td.right= link_to "Download", est_download_content_path(@assessment_category) ,:title=>'Download Attachement',:class=>'tipTipRight'
          - else
            %td.right= link_to "Download", download_zip_content_path(@assessment_category) ,:title=>'Download Attachement',:class=>'tipTipRight'

        %tr.tr-blank
          %tr
            %td{:colspan=>'2'}
              = link_to 'Edit',edit_assessment_category_path(@assessment_category), :class => "button icon edit"
              = link_to 'Delete',assessment_category_path(@assessment_category), :method => "delete",
                :class => "button danger icon remove", :confirm => "Are you sure?"

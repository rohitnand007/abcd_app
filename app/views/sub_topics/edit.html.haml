#content_header
  %h1#main_heading Sub Topics
#inner-tab-menu
  %ul
    %li=link_to  "#{t("web-app-theme.list", :default => "List")}",current_user.is?("ET") ? teacher_contents_path : sub_topics_path
    %li.inner_tab_selected= link_to "#{t("web-app-theme.edit", :default => "Edit")}",edit_sub_topic_path
    %li=link_to link_to "#{t("web-app-theme.new", :default => "New")}", new_sub_topic_path
    %li=  link_to "#{t("web-app-theme.show", :default => "Show")}",sub_topic_path
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          #application-list
            = render "form"

-#.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", sub_topics_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_sub_topic_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_sub_topic_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      sub_topics
    .inner
      = render "form"

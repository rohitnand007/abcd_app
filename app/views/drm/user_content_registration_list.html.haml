:javascript
  $(document).ready(function() {
    $("#messages_list").dataTable({
        "aoColumns": [
                    null,null,
                    { "bSortable": false }
                     ],
        "bAutoWidth": false,"aaSorting": [],// disable default auto sorting ex : [ 4, "desc" ] for 4th column
        "bPaginate": false,
        "bFilter": true,
        "bInfo": false,
        "bRetrieve": true,
        "bDestroy": true,
        "oLanguage": { "sSearch": "Search Page:" }

    });
  });
#content_header
  %h1#main_heading Content List
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          %table#messages_list.listing.sort_table{align: 'center' ,width: '100%',cellpadding:1,cellspacing: 1}
            %thead
              %tr.tr-head
                %th Title
                %th User
                %th Status
            %tbody
              - @contents.each do |content|
                %tr{:class => cycle("tr-odd", "tr-even")}
                  %td.col= link_to content.drm_content.title, drm_content_show_path(content.drm_content_id)
                  %td.col= link_to content.user.name, user_path(content.user_id)
                  %td.col= content.status

        .pagination_info

:javascript
  $(document).ready(function() {
    $("#centers").dataTable({
        "aoColumns": [
                    null,null,
                    { "bSortable": false }
                     ],
        "bAutoWidth": false,"aaSorting": [],// disable default auto sorting ex : [ 4, "desc" ] for 4th column
        "bPaginate": false,
        "bFilter": true,
        "bInfo": false,
        "bRetrieve": true,
        "bDestroy": true,
        "oLanguage": { "sSearch": "Search Page:" }

    });
  });
#content_header
  %h1#main_heading Center Admins
#inner-tab-menu
  %ul
    %li.inner_tab_selected=  link_to "#{t("web-app-theme.list", :default => "List")}",centers_path
    %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_center_path
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          %table#centers.listing.sort_table{align: 'center' ,width: '100%',cellpadding:1,cellspacing: 1}
            %thead
              %tr.tr-head
                %th= t("activerecord.attributes.center.name", :default => t("activerecord.labels.name", :default => "Center Name"))
                %th= t("web-app-theme.created_at", :default => "Created at")
                %th &nbsp
            %tbody
              -#%tr.tr-blank
              - @center_admins.each do |admin|
                %tr{:class => cycle("tr-odd", "tr-even"),:id=>"admin_#{admin.id}"}
                  %td.col= link_to admin.profile.firstname, center_admin_path(admin)
                  %td.col= display_date_time(admin.created_at)
                  %td.col
                    = link_to_show(center_admin_path(admin))
                    &nbsp
                    = link_to_edit(edit_center_admin_path(admin))
                    -#= link_to (center.is_activated ? "#{t("web-app-theme.delete", :default => "Deactivate")}":"#{t("web-app-theme.delete", :default => "Activate")}"),  center_path(center), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}",:style=>center.is_activated ? "":"color:red;"*/
        .pagination_info= paginate @center_admins unless @center_admins.blank?


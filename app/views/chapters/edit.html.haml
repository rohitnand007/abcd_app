#content_header
  %h1#main_heading Chapters
#inner-tab-menu
  %ul
    %li=link_to  "#{t("web-app-theme.list", :default => "List")}",current_user.is?("ET") ? teacher_contents_path : chapters_path
    %li.inner_tab_selected= link_to "#{t("web-app-theme.edit", :default => "Edit")}",edit_chapter_path
    %li=link_to link_to "#{t("web-app-theme.new", :default => "New")}", new_chapter_path
    %li=  link_to "#{t("web-app-theme.show", :default => "Show")}",chapter_path
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          #application-list
            = render "form"

-#.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", chapters_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_chapter_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_chapter_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Chapter
    .inner
      = render "form"

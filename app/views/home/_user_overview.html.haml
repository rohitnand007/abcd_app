.content_div
  .icon_box
    = image_tag 'user_overview.png'
  .result_box
    %table.index_table
      -if current_user.is?("EA")
        %thead
          %tr
            %th You are
        %tbody
          %tr
            %td= @role
      -elsif current_user.is?("IA")
        %thead
          %tr
            %th Institute
            %th You are
            %th
        %tbody
          %tr
            %td= @inst.name
            %td= @role
            %td
      -elsif current_user.is?("ECP")
        %thead
          %tr
            %th Institute
            %th You are
            %th
        %tbody
          %tr
            %td Not Applicable
            %td Publisher
            %td
      -else
        %thead
          %tr
            %th Institute
            %th Center
            %th You are
        %tbody
          %tr
            %td{:style => "text-align:center;padding-top:40px;font-size:16px;"}
              = @inst.name
            %td{:style => "text-align:center;padding-top:40px;font-size:16px;"}
              = @cent.name
            %td{:style => "text-align:center;padding-top:40px;font-size:16px;"}
              = @role
#content_header
  %h1#main_heading Quotes
#inner-tab-menu
  %ul
    %li= link_to  "#{t("web-app-theme.list", :default => "List")}", quotes_path
    %li= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_quote_path
    %li= link_to link_to "#{t("web-app-theme.new", :default => "New")}",new_quote_path
    %li.inner_tab_selected=  link_to "#{t("web-app-theme.show", :default => "Show")}", quote_path(@quote)
#data
  #application-list
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.even.left
          %td= t("activerecord.attributes.quote.name", :default => t("activerecord.labels.name", :default => "Name"))
          %td.right= @quote.name.split('###')[0]
        %tr.odd.left
          %td Author
          %td.right= @quote.name.split('###')[1]
        %tr.even.left
          %td= t("web-app-theme.created_at", :default => "Created at")
          %td.right= display_date_time(@quote.created_at)

        %tr.tr-blank
        %tr
          %td{:colspan=>'2'}
            = link_to 'Edit',edit_quote_path(@quote), :class => "button icon edit"
            = link_to 'Delete',quote_path(@quote), :method => "delete",:class => "button danger icon remove", :confirm => "Are you sure?"

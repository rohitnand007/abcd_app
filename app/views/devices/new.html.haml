#content_header
  %h1#main_heading Devices
#inner-tab-menu
  %ul
    %li=link_to  "#{t("web-app-theme.list", :default => "List")}", devices_path
    %li.inner_tab_selected=link_to link_to "#{t("web-app-theme.new", :default => "New")}", new_device_path
    -if current_user.is? 'EA'
      %li= link_to "#{t("web-app-theme.move_devices", :default => "Move devices")}", move_devices_path
#data
  %table{width: '100%'}
    %tr
      %td
        %div
          #application-list
            = render "form"
-#.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", devices_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_device_path
      %li= link_to "#{t("web-app-theme.move_devices", :default => "Move devices")}", move_devices_path  if current_user.is? 'EA'
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Device
    .inner
      = render "form"
-#- content_for :sidebar, render(:partial => 'shared/sidebar')

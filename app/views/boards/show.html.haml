#content_header
  %h1#main_heading Boards
#inner-tab-menu
  %ul
    %li= link_to  "#{t("web-app-theme.list", :default => "List")}", boards_path
    %li= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_board_path
    %li= link_to link_to "#{t("web-app-theme.new", :default => "New")}",new_board_path
    %li.inner_tab_selected=  link_to "#{t("web-app-theme.show", :default => "Show")}", board_path(@board)
#data
  #application-list
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.even.left
          %td= t("activerecord.attributes.board.name", :default => t("activerecord.labels.name", :default => "Name"))
          %td.right= @board.name
        %tr.odd.left
          %td Code
          %td.right= @board.code
        %tr.even.left
          %td= t("web-app-theme.created_at", :default => "Created at")
          %td.right= display_date_time(@board.created_at)

        %tr.tr-blank
        %tr
          %td{:colspan=>'2'}
            = link_to 'Edit',edit_board_path(@board), :class => "button icon edit"
            = link_to 'Delete',board_path(@board), :method => "delete",:class => "button danger icon remove", :confirm => "Are you sure?"
    .heading.hr
      Content Years
      .right
        = link_to "Add Content year" ,new_content_year_path(board_id: @board.id)  ,:class=>'button icon add'
    = render 'content_years/content_years'

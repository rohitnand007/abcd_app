#data
  #application-list
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.odd.left
          %td= "Edutor Build Name"
          %td.right= @ebuild.ebuild_name
        %tr.even.left
          %td= "Institution"
          %td.right= Institution.includes(:profile).find(@ebuild.institution_id).fullname
        %tr.odd.left
          %td= "Created on"
          %td.right= display_date_time(@ebuild.created_at)
        %tr.even.left
          %td{:colspan=>'2',:align=>'left'}= "APK's uploaded"
    %table.details{width: '700px', align: 'center'}
      %tbody
        %tr.odd.center
          %th= "Package Name"
          %th= "Shared User ID"
          %th= "Version Number"
      - @ebuild.ebuild_apps.each do |app|
        %tr{:class => cycle("odd center", "even center")}
          %td= app.package
          %td= app.sharedUserId
          %td= app.versionCode





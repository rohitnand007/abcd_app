%p#notice= notice

= link_to "back to Publish History",user_assets_path( p: 2), class:"button"
%br
%br

%table#UserAssetInfo.listing.sort_table{align: 'center' ,width: '100%',cellpadding:10,cellspacing: 1}
  %thead
    %tr.tr-head
      %th Student id
      %th Student Name
      %th Downloaded Status
  -@usu_array.each do |usu|
    %tr{:class => cycle("tr-odd","tr-even")}
      %td{align:"center"}= usu[:id]
      %td{align:"center"}= usu[:name]
      %td{align:"center"}= usu[:downloaded]


:css
  table.listing .tr-head th:nth-of-type(1) {
  text-align: center !important;
  }


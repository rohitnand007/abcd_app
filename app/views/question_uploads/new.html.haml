= stylesheet_link_tag "video_page"
= javascript_include_tag 'upload'
= javascript_include_tag 'upload_progress'
= form_for :question_upload, :url=>'/question_uploads',:html => {:multipart => true, :class => :form_group } do |f|
  .panel.panel-default
    %h2 Upload Doc
    .row
      .col4
        .form-group  
          .input-group
            %label{:for => "sel1"}
            = f.label "Name*"
            %br
            = f.text_field :name , :placeholder => "Name of the file", class: "form-control",required:"required"
        .form-group
          .input-group
            = f.label "Browse File"
            %br
            = f.file_field :attachment , class: 'form-control', required: "required", id: '_file'

        %progress#prog{:max => "100", :style => "display:none; width:100%; height:25px;", :value => "0"}
        #percent
        #here

            
  = f.submit 'Upload',disable_with: "Uploading...", class: 'btn btn-info', id: '_submit'
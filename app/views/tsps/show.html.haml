#content_header
  %h1#main_heading tsps
#inner-tab-menu
  %ul
    %li= link_to "#{t("web-app-theme.list", :default => "List")}",tsps_path
    %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_tsp_path
    %li= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_tsp_path(@tsp)
    %li.inner_tab_selected= link_to "#{t("web-app-theme.show", :default => "Show")}", tsp_path(@tsp)
#data
  #application-list
    .heading= @tsp.name
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.odd.left
          %td= t("activerecord.attributes.tsp.rb.name", :default => t("activerecord.labels.name", :default => "Name"))
          %td.right= @tsp.name
        %tr.even.left
          %td
          - if current_user.role.name.eql?('Support Team')
            %td.right= link_to "Download", est_download_content_path(@tsp) ,:title=>'Download Attachement',:class=>'tipTipRight'
          - else
            %td.right= link_to "Download", download_zip_content_path(@tsp) ,:title=>'Download Attachement',:class=>'tipTipRight'

        %tr.tr-blank
        %tr
          %td{:colspan=>'2'}
            = link_to "Edit", edit_tsp_path(@tsp), :class => "button icon edit"
            = link_to "Delete", tsp_path(@tsp), :method => "delete", :class => "button danger icon remove", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

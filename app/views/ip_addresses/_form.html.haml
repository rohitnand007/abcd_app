= simple_form_for @ip_address,:html => { :class => :form,:multipart => true },:validate=>true do |f|
  = f.error_messages :header_message => "Invalid Ip address",
                  :message => "You'll need to fix the following fields:"
  .inputs
  .group
    .field
      = f.input :address,:input_html=>{:class=>"text_field"},:label_html=>{:class=>"label"},:label=>"Ip address:"

  .inputs
  .actions
    = f.button :submit,:class=>'big primary'

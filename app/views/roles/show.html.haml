#content_header
  %h1#main_heading Roles
#inner-tab-menu
  %ul
    %li= link_to  "#{t("web-app-theme.list", :default => "List")}", roles_path
    %li= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_role_path
    %li= link_to link_to "#{t("web-app-theme.new", :default => "New")}",new_role_path
    %li.inner_tab_selected=  link_to "#{t("web-app-theme.show", :default => "Show")}", role_path(@role)
#data
  #application-list
    %table.details{width: '700px',align: 'center'}
      %tbody
        %tr.even.left
          %td= t("activerecord.attributes.role.name", :default => t("activerecord.labels.name", :default => "Name"))
          %td.right= @role.name
        %tr.odd.left
          %td= t("activerecord.attributes.role.name", :default => t("activerecord.labels.name", :default => "Code"))
          %td.right= @role.rc
        %tr.tr-blank
        %tr
          %td{:colspan=>'2'}
            = link_to "Edit",edit_role_path(@role), :class => "button icon edit"
            -#= link_to "Delete", role_path(@user), :method => "delete", :class => "button danger icon remove", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"


= simple_form_for @role, :html => { :class => :form } do |f|
  .inputs
    .group
      .field
        = f.input :name,:input_html=>{:class=>"text_field"},:label_html=>{:class=>"label"}
    .group
      .field
        = f.input :rc,:input_html=>{:class=>"text_field"},:label_html=>{:class=>"label"},:label=>"Code:"
  .group
    .field{:align=>'center'}
      = f.button :submit,:class=>'big primary' ,:disable_with=>disable_with_text(f)
      = link_to t("web-app-theme.cancel", :default => "Cancel"), roles_path,:class=>'button danger icon remove'
